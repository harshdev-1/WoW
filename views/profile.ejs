<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <style>
        body {
            background-color: #d7dfe3;
            color: #ffffff; /* Set the default text color to white */
        }

        .padding {
            padding: 1rem !important;
        }

        .card-img-top {
            max-height: 300px;
            object-fit: cover;
        }

        .card-no-border .card {
            border-color: #d7dfe3;
            border-radius: 4px;
            margin-bottom: 30px;
            box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.05);
        }

        .card-body {
            padding: 1.25rem;
            color: #000000; /* Set the text color for the card body to black */
        }

        .pro-img {
            margin-top: -80px;
            margin-bottom: 20px;
        }

        .little-profile .pro-img img {
            width: 128px;
            height: 128px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            border-radius: 50%;
            object-fit: cover;
        }

        h3 {
            line-height: 30px;
            font-size: 21px;
        }
        a{
            color: #000000;
        }

        .btn-rounded.btn-md {
            padding: 12px 35px;
            font-size: 16px;
        }

        .btn-primary,
        .btn-primary.disabled {
            background: #7460ee;
            border: 1px solid #7460ee;
            box-shadow: 0 2px 2px 0 rgba(116, 96, 238, 0.14), 0 3px 1px -2px rgba(116, 96, 238, 0.2), 0 1px 5px 0 rgba(116, 96, 238, 0.12);
            transition: 0.2s ease-in;
        }

        .btn-rounded {
            border-radius: 60px;
            padding: 7px 18px;
        }

        .m-t-20 {
            margin-top: 20px;
        }

        .text-center {
            text-align: center !important;
        }
    </style>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container-fluid padding">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card card-no-border">
                    <img class="card-img-top img-fluid" src="https://i.imgur.com/K7A78We.jpg" alt="Card image cap">
                    <div class="card-body little-profile text-center">
                        <div class="pro-img"><img src="<%= img %>" alt="/image/default.jpg" class="img-fluid"></div>
                        <h3 class="m-b-0"><%= username %></h3>
                        <p><%= email  %></p>
                        <h3 class="m-b-0"><a type="submit" href="/user/create/post" class="btn btn-primary">Post</a></h3>
                            <a href="/user/account/setting/" type="submit" class="m-t-10 waves-effect waves-dark btn btn-danger btn-md btn-rounded" data-abc="true">Setting</a>
                        <form action="/user/" method="get">
                            <button type="submit" class="m-t-20 waves-effect waves-dark btn btn-primary btn-md btn-rounded" data-abc="true">Find User</button>
                        </form>
                        <div class="row text-center m-t-20">
                            <div class="col-lg-4 col-md-4 m-t-20 count-column">
                                <h3 class="m-b-0 font-light"><a href="/user/articles"><%= user.post.length %></a></h3>
                                <small><a href="/user/articles">Articles</a></small>
                            </div>
                            <div class="col-lg-4 col-md-4 m-t-20 count-column">
                                <h3 class="m-b-0 font-light"><a href="/user/follower"><%= user.follower.length %></a></h3>
                                <small><a href="/user/follower">Followers</a></small>
                            </div>
                            <div class="col-lg-4 col-md-4 m-t-20 count-column">
                                <h3 class="m-b-0 font-light"><a href="/user/following"><%= user.following.length %></a></h3>
                                <small><a href="/user/following">Following</a></small>
                            </div>
                        </div>
                    </div>
                </div>
                <% if (user.post && user.post.length > 0) { %>
                    <% user.post.forEach(function(post) { %>
                       
                      <div class="card" style="margin-top: 20px;">
                        <img src="..." class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= post.postTitle %></h5>
                          <p class="card-text"><%= post.postText %></p>
                          <a href="/user/edit/post/<%= post._id %>" class="btn btn-primary">Edit</a>
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <p>No posts available.</p>
                  <% } %>        
                  
            </div>
        </div>
    </div>
    <%- include('./partials/script') %>
</body>
</html>
